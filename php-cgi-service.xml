<service>
  <id>PHP</id>
  <name>PHP CGI Service</name>
  <description>Runs the php-cgi.exe as a service</description>
  <executable>C:\opt\xampp\php\php-cgi.exe</executable>
  <stopexecutable>C:\Windows\system32\taskkill.exe</stopexecutable>
  <stopargument>/f</stopargument>
  <stopargument>/IM</stopargument>
  <stopargument>php-cgi.exe</stopargument>
  <env name="PHPRC" value="C:\opt\xampp\php" />
  <logpath>C:\opt\xampp\php\logs</logpath>
  <logmode>roll</logmode>
  <startargument>-b9123</startargument>
  <startargument>-cC:\opt\xampp\php\php.ini</startargument>
</service> 